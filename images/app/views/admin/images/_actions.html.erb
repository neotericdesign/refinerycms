<ul>
  <li>
    <%= render :partial => "/shared/admin/search", :locals => {:url => admin_images_url} %>
  </li>
  <li>
    <%= link_to t('.create_new_image'), new_admin_image_path(:dialog => true, :width => 600, :height => 720),
                :class => "add_icon" %>
  </li>
  <% other_image_views.each do |image_view| %>
    <li>
      <%= link_to t('switch_to', :scope => 'admin.images.index.view', :view_name => t("#{image_view}", :scope => 'admin.images.index.view')),
                  admin_images_path(:view => image_view, :page => params[:page]),
                  :class => "reorder_icon"  %>
    </li>
  <% end %>
</ul>

<div id="image_tags">
  <h2>Tags</h2>
  <ul>
    <% if @tag %>
      <li class="odd"><%= link_to 'All images', admin_images_path %></li>
    <% end %>
    <% Image.tags.each do |tag| %>
      <li class="<%= cycle 'even','odd' %>">
        <%= link_to tag.name, tagged_admin_images_path(tag), :class => ('active' if request.fullpath =~ /#{tag.id}/) %>
      </li>
    <% end %>
  </ul>
</div>